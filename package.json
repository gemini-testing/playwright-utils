{
    "name": "@gemini-testing/playwright-utils",
    "version": "1.0.0",
    "description": "Usefull playwright utilities",
    "main": "build/index.js",
    "files": [
        "build"
    ],
    "scripts": {
        "build": "tsc",
        "ci:build": "npm run build",
        "toc": "doctoc README.md",
        "watch": "tsc --watch",
        "clean": "rimraf build/ *.tsbuildinfo",
        "prepack": "npm run clean && npm run build",
        "test": "npm run lint && npm run unit",
        "lint": "npm run eslint && npm run style",
        "ci:lint": "npm run lint",
        "reformat": "eslint src --ext .ts --fix && prettier --write 'src/**/*.ts' '**/*.json'",
        "prettier-watch": "onchange 'src/**/*.ts' -- prettier --write {{changed}}",
        "style": "prettier --check 'src/**/*.ts' '**/*.json'",
        "eslint": "eslint src --ext .ts",
        "unit": "jest",
        "ci:unit": "npm run unit"
    },
    "engines": {
        "node": ">= 16.0.0"
    },
    "keywords": [
        "playwright",
        "utils",
        "fixtures",
        "matchers"
    ],
    "license": "MIT",
    "dependencies": {
        "colors": "1.4.0",
        "lodash": "^4.17.21",
        "looks-same": "8.2.3"
    },
    "devDependencies": {
        "@playwright/test": "1.36.1",
        "@types/jest": "29.5.1",
        "@types/jest-when": "3.5.2",
        "@types/lodash": "^4.14.199",
        "@types/node": "16",
        "@typescript-eslint/eslint-plugin": "5.59.7",
        "@typescript-eslint/parser": "5.59.6",
        "doctoc": "^2.2.1",
        "eslint": "8.40.0",
        "eslint-config-gemini-testing": "3.0.0",
        "jest": "29.5.0",
        "jest-extended": "0.11.5",
        "jest-when": "3.5.2",
        "onchange": "7.1.0",
        "prettier": "2.8.8",
        "rimraf": "5.0.1",
        "ts-jest": "29.1.0",
        "ts-node": "10.9.1",
        "typescript": "5.1.6"
    }
}
